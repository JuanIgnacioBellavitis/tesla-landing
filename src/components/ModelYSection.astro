---
import Section from "./Section.astro";
---

<Section
    title="Model 3"
    subtitle="Agenda una prueba de manejo"
    color="white"
    headerColor="black"
    top="16"
    bottom="16"
>
    <div
        slot="footer"
        class="flex flex-row justify-center items-center space-x-3"
    >
        <a
            href="#_"
            class="inline-flex items-center justify-center w-[15%] px-4 py-2 text-base font-medium leading-6 text-white whitespace-no-wrap bg-blue-600 border border-blue-700 rounded-lg shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            data-rounded="rounded-md"
            data-primary="blue-600"
            data-primary-reset="{}"
        >
            Ordenar
        </a>
        <a
            href="#_"
            class="px-5 py-2.5 w-[15%] font-medium bg-blue-50 hover:bg-blue-100 hover:text-blue-600 text-blue-500 rounded-lg text-sm"
        >
            Más Información
        </a>
    </div>

    <img
        slot="background"
        src="/public/ModelY.png"
        class="h-full w-[90%] object-cover object-center border rounded-lg"
    />
</Section>
